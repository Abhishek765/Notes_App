<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#abcdef"
    >

    <TextView
        android:id="@+id/tv_note_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_deleteButton"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp"
        android:textSize="22sp"
        tools:text="Abhishek"
        android:textColor="#212121"
        />
    <ImageView
        android:id="@+id/iv_deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_delete_forever"
        app:layout_constraintTop_toTopOf="@id/tv_note_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_note_text"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>